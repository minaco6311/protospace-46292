<!DOCTYPE html>
<html>
  <head>
    <title>ProtoSpace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to "ProtoSpace", root_path, class: "nav__logo" %>
          </div>

          <div class="nav__right">
            <% if user_signed_in? %>
              <p>
                こんにちは、
                <%= link_to current_user.name, user_path(current_user), class: "user-link" %>さん
              </p>
              <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav__btn" %>
              <%= link_to "New Proto", new_prototype_path, class: "nav__btn" %>
            <% else %>
              <%= link_to "ログイン", new_user_session_path, class: "nav__btn" %>
              <%= link_to "新規登録", new_user_registration_path, class: "nav__btn" %>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
