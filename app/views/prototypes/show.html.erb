<main class="main"> 
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__heading">
        <%= @prototype.title %>
      </p>

      <%= link_to "by #{@prototype.user.name}", user_path(@prototype.user), class: :prototype__user %>


      <%# 投稿者とログイン中のユーザーが同じなら編集・削除ボタンを表示 %>
      <% if user_signed_in? && current_user == @prototype.user %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_prototype_path(@prototype), class: :prototype__btn %>
          <%= link_to "削除する", prototype_path(@prototype), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: :prototype__btn %>
        </div>
      <% end %>

      <div class="prototype__image">
        <%= image_tag @prototype.image, class: :prototype__image %>
      </div>

      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">キャッチコピー</p>
          <p class="detail__message">
            <%= @prototype.catch_copy %>
          </p>
        </div>

        <div class="prototype__detail">
          <p class="detail__title">コンセプト</p>
          <p class="detail__message">
            <%= @prototype.concept %>
          </p>
        </div>
      </div>

      <%# コメント一覧とフォーム %>
      <div class="prototype__comments">
        <h3>コメント一覧</h3>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <strong>
                <%= link_to comment.user.name, user_path(comment.user), class: "comment-user-link" %>：
              </strong>
              <%= comment.content %>
            </li>
          <% end %>

        </ul>

        <% if user_signed_in? %>
          <div class="comment-form">
            <%= form_with(model: [@prototype, @comment], local: true) do |f| %>
              <div class="form-group">
                <%= f.text_area :content, placeholder: "コメントを書く", rows: 3 %>
              </div>
              <div class="form-actions">
                <%= f.submit "送信する", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
